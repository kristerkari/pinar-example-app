{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "es2016.array.include", "es2017"],
    "noEmit": true,
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true // For importing external helpers from tslib: see https://blog.mariusschulz.com/2016/12/16/typescript-2-1-external-helpers-library
  },
  "exclude": ["node_modules"],
  "compileOnSave": true
}
